<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.home.test"
    android:versionCode="1"
    android:versionName="2.0" >

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.example.android.home" />
    <uses-sdk android:targetSdkVersion="@string/app_name"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@id/webview" android:description="@menu/activity_main" android:permission="android.permission.INTERNET">
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.example.android.home.test.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>